<%- include header %>
<div class="col-lg-12">
    <div class="container" style="border: 5px solid rgba(230,200,200,0.8);border-radius: 8px;">
        <% locals.posts.forEach(function(post, index){ %>
        <p><h2><a href="/<%=post.user %>/<%=post.time.day %>/<%=post.title %>"><%= post.title %></a></h2>
        <p class="info">
            作者：<a href="/<%= post.user %>"><%= post.user %></a> |
            日期：<%= post.time.minute %>
        </p>
        <p><%- post.post %></p>
        <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
        <% }) %>
        <%- include paging %>
    </div>
</div>
<%- include footer %>