<%- include header %>
<div class="col-lg-12">
    <div class="container" style="margin-top: 40px;margin-left: 10%;border: 5px solid rgba(255,255,255,0.3);width: 1100px;">
        <form method="post">
            标题：<br />
            <input type="text" name="title" value="<%= post.title %>" disabled="disabled" /><br />
            正文：<br />
            <textarea name="post" rows="20" cols="147" style="margin: auto;"><%= post.post %></textarea><br />
            <div class="form-actions" style="padding-left: 500px;padding-top: 10px;margin-bottom: 10px;">
                <button type="submit" class="btn btn-primary">保存修改</button>
            </div>
        </form>
    </div>
</div>
<%- include footer %>